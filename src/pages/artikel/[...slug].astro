---
import { getCollection } from 'astro:content';

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const blogEntries = await getCollection('artikel');
  return blogEntries.map(entry => ({
    params: { slug: `artikel/${entry.slug}` }, // Ubah path di sini
    props: { artikel: entry }, // Ubah nama prop menjadi 'artikel'
  }));
}

// 2. For your template, you can get the entry directly from the prop
const { artikel } = Astro.props; // Gunakan 'artikel' bukan 'entry'
const { Content } = await artikel.render();
---

<h1>{artikel.data.title}</h1> <!-- Gunakan 'artikel.data.title' -->
<Content />
